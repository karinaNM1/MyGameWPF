<Window x:Class="MyGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyGame"
        mc:Ignorable="d"
        Title="Своя игра - Вход" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="СВОЯ ИГРА" Style="{StaticResource headText}"></TextBlock>
        <Button Grid.Row="1" Content="НАЧАТЬ ИГРУ" Style="{StaticResource btn}"></Button>
        <Button Grid.Row="2" Content="ВОЙТИ В СИСТЕМУ" Style="{StaticResource btn}"></Button>
    </Grid>
    

</Window>
