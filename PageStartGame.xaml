<Page x:Class="MyGame.PageStartGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyGame"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageStartGame">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>

        

        <WrapPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnStartGame" Style="{StaticResource btnStartGameButtons}" Content="Начать игру" Margin="0,0,0,20" Click="btnStartGame_Click"/>
            <Button x:Name="btnAuto" Style="{StaticResource btnStartGameButtons}" Content="Авторизация" Margin="0,0,0,20" Click="btnAuto_Click"/>
            <Button Style="{StaticResource btnStartGameButtons}" Content="Справка" Margin="0,0,0,20" Click="Button_Click"/>
            <Button Style="{StaticResource btnStartGameButtons}" Content="Выйти"/>

        </WrapPanel>
    </Grid>
</Page>
